<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= headTitle %></title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <main>
      <%- include('partials/navigation', { menuLinks, activeLinkPath, cartCount }); %>

      <h1 class="heading">Your Cart</h1>

      <% if (items && items.length > 0) { %>
        <ul class="product-list">
          <% items.forEach(item => { %>
            <li class="product-item">
              <img src="<%= item.imageUrl %>" alt="<%= item.name %>" width="150" />
              <div>
                <strong><%= item.name %></strong> – <%= item.description %> – <%= item.price %> zł
              </div>
            </li>
          <% }); %>          
        </ul>
      <% } else { %>
        <p>Your cart is empty.</p>
      <% } %>

      <form action="/cart/clear" method="POST">
        <button class="button" style="margin-top: 20px;">Clear Cart</button>
      </form>
    </main>
  </body>
</html>
